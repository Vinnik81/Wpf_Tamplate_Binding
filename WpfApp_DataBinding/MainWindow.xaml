<Window x:Class="WpfApp_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataBinding"
        mc:Ignorable="d" x:Name="mainWindow"
        Title="{Binding ElementName=textBoxInput, Path=Text}" Height="450" Width="400" FontSize="40">
    <Window.Resources>
        <SolidColorBrush x:Key="myColor" Color="LightCyan"></SolidColorBrush>
    </Window.Resources>
    <!--<StackPanel>
        <TextBlock  Background="{StaticResource myColor}" Text="Test"></TextBlock>
        <Button Click="Button_Click">Change color</Button>
    </StackPanel>-->

    <StackPanel>
        <TextBox x:Name="textBoxInput"></TextBox>
        <TextBlock Text="{Binding ElementName=textBoxInput, Path=Text}" x:Name="textBlockOutput"></TextBlock>
        <WrapPanel>
            <TextBlock Text="{Binding ElementName=mainWindow, Path=Width}"/>
            <TextBlock Text=" x "/>
            <TextBlock Text="{Binding ElementName=mainWindow, Path=Height}"/>
        </WrapPanel>
        <!--<TextBox TextChanged="textBoxInput_TextChanged" x:Name="textBoxInput"></TextBox>
        <TextBlock x:Name="textBlockOutput">test</TextBlock>-->
    </StackPanel>
</Window>
