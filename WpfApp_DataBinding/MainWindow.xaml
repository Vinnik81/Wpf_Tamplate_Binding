<Window x:Class="WpfApp_DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataBinding"
        mc:Ignorable="d" x:Name="mainWindow" Height="450" Width="400" FontSize="40">
    <Window.Resources>
        <SolidColorBrush x:Key="myColor" Color="LightCyan"></SolidColorBrush>
    </Window.Resources>
   

    <StackPanel>
        <TextBox Text="{Binding MyText}"></TextBox>
        <TextBlock Text="{Binding MyText}"></TextBlock>
        <TextBox Text="{Binding Phone}"></TextBox>
        <TextBlock Text="{Binding Phone}"></TextBlock>
        <!--<WrapPanel>
            <TextBlock Text="{Binding Width}"/>
            <TextBlock Text=" x "/>
            <TextBlock Text="{Binding Height}"/>
        </WrapPanel>-->
        <Button Click="Button_Click">Click me</Button>
    </StackPanel>
</Window>



